<div class="container col-md-5 border rounded formCard">
  <h2>
    Create a new lesson.
  </h2>
  <form action="http://localhost:81/lessons/create" method="post">
    <fieldset >
      <div class="form-group">
        <label for="disabledTextInput">Name</label>
        <input required type="text" id="name" name="name" class="form-control" placeholder="Please insert a name">
      </div>
      <div class="form-group">
        <label for="disabledTextInput">Language association</label>
        <select required class="custom-select" class="languageSelect" name="language">
          {{#each languagesDD}}
            <option value= {{ this.name }}>
              {{ this.name }}
            </option>
          {{/each}}
        </select>
      </div>
      <div class="form-group">
        <label for="disabledTextInput">Description</label>
        <input required type="text" id="description" name="description" class="form-control" placeholder="Please insert a title">
      </div>
      <div class="form-group">
        <label for="disabledTextInput">Details</label>
        <textarea required type="text" id="details" name="details" class="form-control" placeholder="Please insert a introduction"></textarea>
      </div>
       <button type="submit" class="btn btn-primary">Submit</button>
    </fieldset>
  </form>
</div>
