<div class="container col-md-5 border rounded formCard" id="exampleCreate">
  <h2>
    Example example code.
  </h2>
  <form action="http://localhost:81/examples/" + {{ this._id }} + "/update" method="post">
    <fieldset >
      <div class="form-group">
        <label for="disabledTextInput">Name</label>
        <input required type="text" name="name" class="form-control" placeholder="Please insert a name">
      </div>
      <div class="form-group">
        <label for="disabledTextInput">Language association</label>
        <select required class="custom-select" class="languageSelect" name="language">
          {{#each languagesDD}}
            <option value= {{ this.name }}>
              {{ this.name }}
            </option>
          {{/each}}
        </select>
      </div>
      <div class="form-group">
        <label for="disabledTextInput">Code example</label>
        <textarea required type="text" name="code" class="form-control codeInut" placeholder="Please insert code example"></textarea>
      </div>

       <button type="submit" class="primary-button">Submit</button>
    </fieldset>
  </form>
</div>
